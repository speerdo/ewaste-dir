import type { RecyclingCenter } from '../types/supabase';

interface Props {
  cityName: string;
  state: string;
  centers: RecyclingCenter[];
  localData?: {
    regulations?: any;
    stats?: any;
  };
  showNearbyMessage?: boolean;
}

const { cityName, state, centers, localData, showNearbyMessage } = Astro.props;

// Generate a stable hash from city name for template selection
function getCityHash(cityName: string): number {
  let hash = 0;
  for (let i = 0; i < cityName.length; i++) {
    hash = ((hash << 5) - hash) + cityName.charCodeAt(i);
    hash = hash & hash; // Convert to 32bit integer
  }
  return Math.abs(hash);
}

// Helper functions for center insights
function getTopRatedCenter(centers: RecyclingCenter[]) {
  return centers
    .filter(c => c.rating && Number(c.rating) > 0)
    .sort((a, b) => Number(b.rating) - Number(a.rating))[0];
}

function getCityGovernmentCenter(centers: RecyclingCenter[]) {
  return centers.find(c => 
    c.name.toLowerCase().includes('city') || 
    c.name.toLowerCase().includes('municipal') ||
    c.name.toLowerCase().includes('public works') ||
    c.name.toLowerCase().includes('government')
  );
}

function getChainCenters(centers: RecyclingCenter[]) {
  const chains = ['best buy', 'staples', 'goodwill', 'walmart', 'target'];
  return centers.filter(c => 
    chains.some(chain => c.name.toLowerCase().includes(chain))
  );
}

// Generate FAQs using enhanced database content
function generateEnhancedFAQs(cityName: string, state: string, centers: RecyclingCenter[], localData?: any) {
  const faqs = [];
  const centerCount = centers.length;
  const regulations = localData?.regulations;
  const stats = localData?.stats;
  
  // FAQ 1: Local regulations (using enhanced database content)
  if (regulations?.has_ewaste_ban) {
    faqs.push({
      question: `Are there e-waste disposal laws in ${cityName}, ${state}?`,
      answer: `Yes, ${state} prohibits disposal of electronics in landfills. ${regulations.landfill_restrictions || 'All computers, TVs, phones and electronic devices must be recycled through certified facilities.'} ${regulations.penalties_fines ? `Violations can result in ${regulations.penalties_fines.toLowerCase()}` : ''}`
    });
  } else {
    faqs.push({
      question: `What are the electronics disposal regulations in ${cityName}?`,
      answer: `${regulations?.landfill_restrictions || `${state} encourages proper electronics recycling to protect the environment.`} ${regulations?.municipal_programs || `${cityName} participates in regional electronics recycling programs.`} Always use certified recyclers for proper disposal.`
    });
  }

  // FAQ 2: Environmental impact (using enhanced database content)
  if (stats?.co2_savings_lbs) {
    faqs.push({
      question: `What environmental impact does electronics recycling have in ${cityName}?`,
      answer: `Electronics recycling in ${cityName} saves approximately ${Number(stats.co2_savings_lbs).toLocaleString()} pounds of CO2 annually. The community also recovers ${Number(stats.metals_recovered_lbs || 0).toLocaleString()} pounds of valuable metals and ${Number(stats.plastics_recycled_lbs || 0).toLocaleString()} pounds of plastics each year.`
    });
  } else {
    faqs.push({
      question: `Why is electronics recycling important in ${cityName}?`,
      answer: `Electronics recycling prevents toxic materials from entering landfills and recovers valuable materials like gold, silver, and rare earth elements. It also creates local jobs and reduces the need for new mining operations.`
    });
  }

  // FAQ 3: Economic benefits (using enhanced database content)
  if (stats?.jobs_supported && stats?.economic_impact_dollars) {
    faqs.push({
      question: `How does electronics recycling benefit ${cityName}'s economy?`,
      answer: `Electronics recycling supports ${stats.jobs_supported} local jobs in ${cityName} and generates approximately $${Number(stats.economic_impact_dollars).toLocaleString()} in economic impact annually. This includes direct employment, supplier relationships, and induced economic activity.`
    });
  } else {
    faqs.push({
      question: `What happens to recycled electronics in ${cityName}?`,
      answer: `Recycled electronics are processed to recover valuable materials including precious metals, plastics, and rare earth elements. This creates local jobs and reduces the environmental impact of mining new materials.`
    });
  }

  // FAQ 4: Population-specific recycling data
  if (stats?.population && stats?.recycling_rate) {
    const annualEwaste = Math.round(Number(stats.population) * Number(stats.ewaste_per_capita || 45));
    faqs.push({
      question: `How much e-waste does ${cityName} generate annually?`,
      answer: `With a population of ${Number(stats.population).toLocaleString()}, ${cityName} generates approximately ${annualEwaste.toLocaleString()} pounds of electronic waste annually. Currently, about ${stats.recycling_rate}% is properly recycled, leaving room for improvement through increased community participation.`
    });
  }

  return faqs.slice(0, 4); // Return up to 4 FAQs
}

// Generate unique prose for community impact section using varied templates
function generateCommunityImpactText(cityName: string, population: number, recyclingRate?: number, envBenefits?: string): string {
  const hash = getCityHash(cityName);
  const popFormatted = population.toLocaleString();
  
  // 8 different prose templates - each city gets one based on hash
  const templates = [
    // Template 0
    `As home to ${popFormatted} people, ${cityName} plays a meaningful role in regional environmental efforts. ${recyclingRate ? `About ${recyclingRate}% of local electronic waste currently goes through proper recycling channels.` : 'Residents here contribute to reducing toxic materials from entering landfills.'} ${envBenefits || ''}`.trim(),
    
    // Template 1
    `The ${popFormatted} residents of ${cityName} form a community where responsible electronics disposal matters. ${recyclingRate ? `Local participation in recycling programs stands at ${recyclingRate}%, reflecting growing environmental awareness.` : 'Every properly recycled device helps protect groundwater and soil from harmful chemicals.'} ${envBenefits || ''}`.trim(),
    
    // Template 2
    `${cityName}'s population of ${popFormatted} represents significant potential for environmental impact through mindful e-waste management. ${recyclingRate ? `The area achieves a ${recyclingRate}% recycling rate, demonstrating community engagement with sustainability initiatives.` : 'Each year, residents have opportunities to divert tons of electronics from landfills.'} ${envBenefits || ''}`.trim(),
    
    // Template 3
    `In ${cityName}, where ${popFormatted} individuals call home, electronics recycling serves as a practical way to protect local ecosystems. ${recyclingRate ? `Current figures show ${recyclingRate}% of discarded devices reach certified recyclers.` : 'Proper disposal prevents lead, mercury, and cadmium from contaminating the environment.'} ${envBenefits || ''}`.trim(),
    
    // Template 4
    `Among the ${popFormatted} people living in ${cityName}, responsible e-waste handling creates measurable benefits for the area. ${recyclingRate ? `With a ${recyclingRate}% recycling participation rate, the community sets an example for neighboring cities.` : 'Local recycling efforts help recover precious metals and reduce the need for raw material extraction.'} ${envBenefits || ''}`.trim(),
    
    // Template 5
    `${cityName} residents—numbering ${popFormatted}—contribute to environmental health when they choose proper electronics recycling. ${recyclingRate ? `The community's ${recyclingRate}% recycling rate shows commitment to keeping hazardous materials out of waste streams.` : 'Every phone, computer, and TV properly recycled prevents toxins from leaching into soil and water.'} ${envBenefits || ''}`.trim(),
    
    // Template 6
    `For ${cityName}'s ${popFormatted} residents, electronics recycling represents an accessible environmental action with real impact. ${recyclingRate ? `Approximately ${recyclingRate}% of local e-waste currently moves through responsible channels.` : 'When residents use certified recyclers, they help ensure valuable materials return to manufacturing cycles.'} ${envBenefits || ''}`.trim(),
    
    // Template 7
    `With ${popFormatted} people in the area, ${cityName} has substantial capacity to influence regional recycling outcomes. ${recyclingRate ? `Local data indicates ${recyclingRate}% of electronics reach proper end-of-life processing.` : 'Community participation in recycling programs directly reduces environmental contamination risks.'} ${envBenefits || ''}`.trim(),
  ];
  
  return templates[hash % templates.length];
}

// Generate unique prose for city overview section using varied templates
function generateCityOverviewText(
  cityName: string,
  state: string,
  centerCount: number,
  population?: number,
  hasEwasteBan?: boolean,
  showNearbyMessage?: boolean
): string {
  const hash = getCityHash(cityName);
  const popText = population ? `, serving a population of ${population.toLocaleString()} residents` : '';
  const banText = hasEwasteBan ? ` ${state} law requires proper e-waste disposal - electronics cannot be placed in regular trash.` : '';
  
  const countPhrase = showNearbyMessage
    ? `${centerCount} electronics recycling centers serve the ${cityName} area`
    : `${cityName} has ${centerCount} electronics recycling ${centerCount === 1 ? 'center' : 'centers'}`;
  
  // 8 different opening templates
  const openings = [
    `${countPhrase}${popText} with safe disposal options for computers, phones, TVs, and other electronic devices.${banText}`,
    `Residents can choose from ${centerCount} certified electronics recycling ${centerCount === 1 ? 'facility' : 'facilities'} in the ${cityName} area${popText}. These centers accept computers, mobile devices, televisions, and various electronic equipment.${banText}`,
    `${cityName} offers ${centerCount} electronics recycling ${centerCount === 1 ? 'location' : 'locations'}${popText} where residents properly dispose of old computers, phones, TVs, and electronic devices.${banText}`,
    `The ${cityName} area features ${centerCount} certified ${centerCount === 1 ? 'facility' : 'facilities'} for electronics recycling${popText}. Local residents use these centers to responsibly recycle computers, phones, televisions, and other e-waste.${banText}`,
    `In ${cityName}${population ? `, where ${population.toLocaleString()} people live,` : ''} ${centerCount} electronics recycling ${centerCount === 1 ? 'center provides' : 'centers provide'} safe disposal for computers, phones, TVs, and electronic equipment.${banText}`,
    `${cityName} residents have access to ${centerCount} electronics recycling ${centerCount === 1 ? 'facility' : 'facilities'}${popText}. These locations handle proper disposal of computers, mobile devices, televisions, and various electronic products.${banText}`,
    `With ${centerCount} certified recycling ${centerCount === 1 ? 'location' : 'locations'}${population ? ` serving ${population.toLocaleString()} residents` : ''}, ${cityName} provides options for disposing of computers, phones, TVs, and electronic devices.${banText}`,
    `${cityName}'s ${centerCount} electronics recycling ${centerCount === 1 ? 'center' : 'centers'} ${centerCount === 1 ? 'serves' : 'serve'}${population ? ` the area's ${population.toLocaleString()} residents` : ' the community'} with responsible disposal options for computers, phones, televisions, and electronic equipment.${banText}`,
  ];
  
  return openings[hash % openings.length];
}

// Generate insights using enhanced database content
const topRatedCenter = getTopRatedCenter(centers);
const cityGovCenter = getCityGovernmentCenter(centers);
const chainCenters = getChainCenters(centers);
const enhancedFAQs = generateEnhancedFAQs(cityName, state, centers, localData);

// Generate highlights using both center data and enhanced database content
const keyHighlights = [];
if (topRatedCenter) {
  keyHighlights.push(`${topRatedCenter.name} is the top-rated option (${topRatedCenter.rating}★)`);
}
if (cityGovCenter) {
  keyHighlights.push(`City-run facility available: ${cityGovCenter.name}`);
}
if (localData?.stats?.recycling_rate) {
  keyHighlights.push(`Local recycling rate: ${localData.stats.recycling_rate}%`);
}
if (chainCenters.length > 0) {
  keyHighlights.push(`Retail drop-off options: ${chainCenters[0].name.split(' ')[0]}${chainCenters.length > 1 ? ` and ${chainCenters.length - 1} others` : ''}`);
}

---
interface Props {
  cityName: string;
  state: string;
}

const { cityName, state } = Astro.props;
---

<!-- Local News Section - Fetched Client-Side -->
<div 
  id="local-news-container" 
  class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg p-6 mb-6"
  data-city={cityName}
  data-state={state}
>
  <div class="flex items-center mb-4">
    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
      </svg>
    </div>
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Recent Recycling News in {cityName}</h2>
      <p class="text-sm text-gray-600 mt-1">
        Latest news and updates about electronics recycling in {cityName}, {state}
      </p>
    </div>
  </div>
  
  <!-- Loading State -->
  <div id="news-loading" class="text-center py-8">
    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
    <p class="text-gray-600 mt-2 text-sm">Loading news...</p>
  </div>
  
  <!-- Error State (hidden by default) -->
  <div id="news-error" class="hidden text-center py-8">
    <p class="text-gray-600 text-sm">Unable to load news at this time.</p>
  </div>
  
  <!-- News Articles Container (populated by JavaScript) -->
  <div id="news-articles" class="space-y-4 hidden"></div>
</div>

<script>
  (async function() {
    const container = document.getElementById('local-news-container');
    const loadingEl = document.getElementById('news-loading');
    const errorEl = document.getElementById('news-error');
    const articlesEl = document.getElementById('news-articles');
    
    if (!container) {
      console.error('LocalNews: Container not found');
      return;
    }
    
    const cityName = container.dataset.city;
    const state = container.dataset.state;
    
    console.log('LocalNews: Fetching news for', cityName, state);
    
    if (!cityName || !state) {
      console.error('LocalNews: Missing city or state data');
      loadingEl.classList.add('hidden');
      errorEl.classList.remove('hidden');
      errorEl.innerHTML = '<p class="text-gray-600 text-sm">Unable to load news: missing location data.</p>';
      return;
    }
    
    try {
      // Fetch news via API endpoint (to handle CORS)
      const apiUrl = `/api/news?city=${encodeURIComponent(cityName)}&state=${encodeURIComponent(state)}`;
      console.log('LocalNews: Calling API:', apiUrl);
      
      const response = await fetch(apiUrl);
      
      console.log('LocalNews: API response status:', response.status, response.statusText);
      
      if (!response.ok) {
        const errorText = await response.text();
        console.error('LocalNews: API error response:', errorText);
        throw new Error(`Failed to fetch news: ${response.status} ${response.statusText}`);
      }
      
      const data = await response.json();
      console.log('LocalNews: Received data:', data);
      
      const articles = data.articles || [];
      console.log('LocalNews: Found articles:', articles.length);
      
      // Filter to recent articles (last 6 months)
      const sixMonthsAgo = new Date();
      sixMonthsAgo.setMonth(sixMonthsAgo.getMonth() - 6);
      
      // Sort articles by date (newest first) and filter to recent
      const recentArticles = articles
        .filter(article => {
          if (!article.pubDate) return false;
          const articleDate = new Date(article.pubDate);
          return articleDate >= sixMonthsAgo;
        })
        .sort((a, b) => {
          // Sort by date descending (newest first)
          const dateA = new Date(a.pubDate).getTime();
          const dateB = new Date(b.pubDate).getTime();
          return dateB - dateA;
        })
        .slice(0, 3); // Show max 3 articles
      
      if (recentArticles.length === 0) {
        // Show message if no recent articles instead of hiding
        loadingEl.classList.add('hidden');
        errorEl.classList.remove('hidden');
        errorEl.innerHTML = '<p class="text-gray-600 text-sm">No recent recycling news found for this area. Check back later for updates!</p>';
        return;
      }
      
      // Hide loading, show articles
      loadingEl.classList.add('hidden');
      articlesEl.classList.remove('hidden');
      
      // Render articles with images
      articlesEl.innerHTML = recentArticles.map(article => {
        const hasImage = article.image && article.image.length > 0;
        
        return `
        <a 
          href="${article.link}"
          target="_blank"
          rel="noopener noreferrer"
          class="block bg-white rounded-lg overflow-hidden border border-blue-200 hover:border-blue-400 hover:shadow-lg transition-all group"
        >
          <div class="flex items-start gap-4">
            ${hasImage ? `
              <div class="flex-shrink-0 w-32 h-32 rounded-lg overflow-hidden bg-gray-100">
                <img 
                  src="${article.image}" 
                  alt="${(article.title || 'News article').replace(/"/g, '&quot;')}"
                  class="w-full h-full object-cover"
                  loading="lazy"
                  onerror="this.style.display='none'; this.parentElement.classList.add('hidden');"
                />
              </div>
            ` : ''}
            <div class="flex-1 p-4 flex items-start justify-between min-w-0">
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors line-clamp-2">
                  ${(article.title || 'Untitled').replace(/</g, '&lt;').replace(/>/g, '&gt;')}
                </h3>
                ${article.description ? `
                  <p class="text-sm text-gray-600 line-clamp-2 mb-3">
                    ${article.description.replace(/</g, '&lt;').replace(/>/g, '&gt;')}
                  </p>
                ` : ''}
                <div class="flex items-center gap-3 text-xs text-gray-500">
                  <span class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                    </svg>
                    ${(article.source || 'News').replace(/</g, '&lt;').replace(/>/g, '&gt;')}
                  </span>
                  ${article.pubDate ? `
                    <span class="flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      ${new Date(article.pubDate).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </span>
                  ` : ''}
                </div>
              </div>
              <svg class="w-5 h-5 text-blue-600 ml-3 flex-shrink-0 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </div>
          </div>
        </a>
      `;
      }).join('');
      
    } catch (error) {
      console.error('LocalNews: Error fetching news:', error);
      loadingEl.classList.add('hidden');
      errorEl.classList.remove('hidden');
      // Show a more helpful error message with debugging info
      const errorMessage = error instanceof Error ? error.message : String(error);
      errorEl.innerHTML = `
        <p class="text-gray-600 text-sm mb-2">Unable to load news at this time.</p>
        <p class="text-gray-500 text-xs">Error: ${errorMessage}</p>
        <p class="text-gray-500 text-xs mt-1">Check browser console for details.</p>
      `;
    }
  })();
</script>

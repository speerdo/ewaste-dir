---
import { getAllCities } from '../lib/supabase';
import type { StateWithCities } from '../lib/supabase';

interface PopularCity {
  state: string;
  city: string;
}

// Get all cities and sort them randomly to simulate "popular" cities
const allCities: StateWithCities[] = await getAllCities();
const popularCities: PopularCity[] = allCities
  .flatMap(({ state, cities }: StateWithCities) => 
    cities.map((city: string) => ({ state, city }))
  )
  .sort(() => Math.random() - 0.5)
  .slice(0, 12);
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900">Popular Cities</h2>
      <p class="mt-3 text-lg text-gray-600 max-w-2xl mx-auto">Discover some of the most visited cities across the country</p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {popularCities.map(({ state, city }: PopularCity) => (
        <a 
          href={`/states/${state.toLowerCase()}#${city.toLowerCase().replace(/\s+/g, '-')}`}
          class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
        >
          <h3 class="font-medium text-gray-900">{city}</h3>
          <p class="text-sm text-gray-600">{state}</p>
        </a>
      ))}
    </div>

    <div class="text-center mt-12">
      <a 
        href="/states" 
        class="inline-flex items-center bg-primary-100 text-primary-800 px-6 py-3 rounded-full font-medium hover:bg-primary-200 transition-colors"
      >
        View All Cities
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

---
import type { State } from '../types/supabase';

interface Props {
  state: State;
}

const { state } = Astro.props;

// Log state data for debugging
console.log('StateDescription component - state data:', state);
---

<section class="bg-white py-12 border-b border-gray-100">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl font-display font-bold text-gray-900 mb-6">
        E-Waste Recycling Laws and Programs in {state.name}
      </h2>
      
      <div class="max-w-none">
        {state.description ? (
          <p class="text-gray-600 leading-relaxed">
            {state.description}
          </p>
        ) : (
          <p class="text-gray-600 leading-relaxed">
            Find electronics recycling centers in {state.name}. Safe and responsible disposal of computers, phones, TVs and other electronic devices.
          </p>
        )}
      </div>
    </div>
  </div>
</section>

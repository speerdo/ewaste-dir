---
import type { StateData } from '../types/state';

interface Props {
  stateInfo: StateData;
}

const { stateInfo } = Astro.props;
---

<section class="py-12 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:flex lg:items-center lg:justify-between">
      <div class="lg:w-1/2 lg:pr-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-6">
          E-Waste Recycling in {stateInfo.stateName}
        </h1>
        <div class="prose prose-lg max-w-none text-gray-500">
          <p>{stateInfo.description}</p>
        </div>
      </div>
      
      <div class="mt-8 lg:mt-0 lg:w-1/2">
        {stateInfo.imageUrl ? (
          <img
            src={stateInfo.imageUrl}
            alt={stateInfo.imageAlt || `E-waste recycling in ${stateInfo.stateName}`}
            class="rounded-lg shadow-lg object-cover w-full h-96"
          />
        ) : (
          <div class="bg-gray-100 rounded-lg h-96 flex items-center justify-center">
            <p class="text-gray-400 text-lg">Image coming soon</p>
          </div>
        )}
      </div>
    </div>
  </div>
</section> 

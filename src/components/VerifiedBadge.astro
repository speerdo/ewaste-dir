---
interface Props {
  tier?: 'premium' | 'featured';
  size?: 'sm' | 'md';
}

const { tier = 'premium', size = 'md' } = Astro.props;
const isFeatured = tier === 'featured';
---

<span
  class:list={[
    'inline-flex items-center gap-1 rounded-full font-medium border',
    size === 'sm' ? 'px-2 py-0.5 text-xs' : 'px-2.5 py-1 text-xs',
    isFeatured
      ? 'bg-amber-50 text-amber-800 border-amber-300'
      : 'bg-green-50 text-green-800 border-green-300',
  ]}
  title="This business has been verified by RecycleOldTech.com"
>
  <svg
    class:list={[size === 'sm' ? 'w-3 h-3' : 'w-3.5 h-3.5', 'flex-shrink-0']}
    fill="currentColor"
    viewBox="0 0 20 20"
    aria-hidden="true"
  >
    <path
      fill-rule="evenodd"
      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
      clip-rule="evenodd"
    />
  </svg>
  {isFeatured ? 'Featured Partner' : 'Verified Partner'}
</span>

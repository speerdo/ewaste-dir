---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import FeaturedStates from '../components/FeaturedStates.astro';
import StateDirectory from '../components/StateDirectory.astro';
import PopularCities from '../components/PopularCities.astro';
import Testimonials from '../components/Testimonials.astro';
import CTA from '../components/CTA.astro';
import { getCollection } from 'astro:content';

// Get featured blog posts
const allBlogPosts = await getCollection('blog');
const featuredPosts = allBlogPosts
  .filter(post => post.data.featured === true)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);
---

<Layout 
  title="Electronics Recycling Near Me - U.S. E-Waste Directory"
  description="Find electronics recycling centers near you. Safely dispose of computers, phones, TVs and e-waste at certified facilities nationwide."
>
  <Hero />
  
  <FeaturedStates />
  <StateDirectory />
  <PopularCities />

  <section class="py-16 bg-gradient-to-br from-gray-50 to-green-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">From Our Blog – Latest Recycling Tips</h2>
          <p class="text-xl text-gray-600">Stay informed with expert insights on electronics recycling and sustainability</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {featuredPosts.map((post) => {
            const postUrl = `/blog/${post.slug}`;
            const formattedDate = new Date(post.data.pubDate).toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            });
            
            return (
              <article class="bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
                <div class="aspect-w-16 aspect-h-9">
                  <img 
                    src={post.data.image} 
                    alt={post.data.title} 
                    class="w-full h-48 object-cover"
                  />
                </div>
                <div class="p-6">
                  <div class="mb-4">
                    <time class="text-sm text-gray-500 font-medium">{formattedDate}</time>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-3">
                    <a href={postUrl} class="hover:text-green-600 transition-colors">
                      {post.data.title}
                    </a>
                  </h3>
                  <p class="text-gray-700 mb-4">
                    {post.data.description}
                  </p>
                  <a href={postUrl} class="text-green-600 font-medium hover:text-green-700 transition-colors">
                    Read more →
                  </a>
                </div>
              </article>
            );
          })}
        </div>

        <!-- View All Blog Posts Link -->
        <div class="text-center mt-12">
          <a href="/blog" class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors">
            View All Blog Posts
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Comprehensive E-Waste Information Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-8">Complete Guide to Electronics Recycling</h2>
        
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold">What is E-Waste Recycling?</h3>
            </div>
            <p class="text-gray-700 leading-relaxed">
              Electronic waste recycling recovers valuable materials from old devices. This includes computers, smartphones, tablets, televisions, and printers. The process prevents harmful materials from entering landfills. Materials like lead, mercury, and cadmium are safely handled. It also recovers precious metals like gold, silver, and rare earth elements. These materials are reused in new products.
            </p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">

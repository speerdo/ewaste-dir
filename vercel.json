{
  "github": {
    "silent": true
  },
  "buildCommand": "NODE_OPTIONS=\"--max-old-space-size=7168\" NODE_ENV=production astro build",
  "installCommand": "npm ci --prefer-offline",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=7168 --no-warnings"
    }
  }
}
